<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AmbulanceTypeActivity">

    <TextView
        android:id="@+id/Textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Select by Ambulance Type "
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ambulance"
        android:layout_below="@id/Textview"
        />

    <RadioGroup
        android:id="@+id/ambulanceTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="-68dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/BasicLifeSupportRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Life Support"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/advancedLifeSupportRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Advanced Life Support"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/patientTransportSupportRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Transport Support"
            android:textSize="25sp" />
    </RadioGroup>

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ambulanceTypeRadioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="22dp"
        android:text="Select"
        android:textSize="30sp" />

</RelativeLayout>
